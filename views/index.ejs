<%- include('parts/head')  %> 
<%- include('parts/navbar')  %> 
<div class="container" >
    <form action="/" method="GET">
        <select name = "category" class="form-control form-control-lg">
            <option value="all">All</option>
            <option value="cloths">Cloths</option>
            <option value="laptops">Laptops</option>
            <option value="phones">Phones</option>
          </select>
          <button type="submit" class="btn btn-primary">Filter</button>
    </form>
</div>
<div class="container">
    <% if(products.length === 0 ){ %>
        <div class="alert alert-danger">
            <h3>No Products For Now </h3>
        </div>
    <% }else{ %>
        <div class="row">
            <% for(product of products){ %>
                <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card" style="width: 18rem;">
                        <img src="<%=product.image%>.jpg " class="card-img-top">
                        <div class="card-body">
                          <h5 class="card-title"><a href="/product/<%=product._id%>"><%= product.name %> </a></h5>
                          <p>Price: <%= product.price %> $</p>
                          <form action="/cart" method="POST">
                              <input type="number" name="amount" class="form-controll">
                              <button type="submit" value="add to card" class="btn btn-primary">submit</button>
                          </form>
                        </div>
                      </div>
                </div>
                <% } %>  
        </div>
    <%} %>   
</div>

<%- include('parts/footer')  %> 
