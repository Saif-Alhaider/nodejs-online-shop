<%- include('parts/head')  %>
<h3>Login</h3>
<div class="container ">
    <form method="POST">
        <input type="text" name="email" placeholder="email"><br>
        <% let emailError = LoginValidationErrors.find(err => err.param === 'email') %>
        <% if(emailError){ %>
            <p class="alert alert-danger">Error: <%= emailError.msg%> </p>
        <% } %> 
        <input type="password" name="password" placeholder="password"><br>
        <% let passwordError = LoginValidationErrors.find(err => err.param === 'password') %>
        <% if(passwordError){ %>
            <p class="alert alert-danger">Error: <%= passwordError.msg%> </p>
        <% } %>
        <button type="submit" class="btn btn-primary">submit</button>
    </form>
    <% if(loginError){ %>
    <br>
    <p><%= loginError %> </p>
    <% } %>
</div>
<%- include('parts/footer')  %>